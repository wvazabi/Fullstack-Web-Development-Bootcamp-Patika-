  <h1>HTML Forms</h1>
<h2>Example</h2>
  <form>
    <fieldset>
      <legend>Kişisel</legend>
    
        <label for="fullname">İsim soyisim</label>
        <input type="text" id = "fullname">
      <div> 
        <label for="gender">Cinsiyet</label>
        <input type="radio" id="gender" name="gender" value="male"> Erkek
        <input type="radio" id="gender" name="gender" value="female"> Kadın
      </div>
      <div>
        <label for="birthday">Doğum tarihi</label>
        <input type="date" id="birthday"">
      </div>
      <div>
        <p></p>
      </div>
      <div>
        <label for="city">Şehir</label>
        <select id="city">
          <option value="">seçiniz..</option>
          <optgroup label="Marmara">
          <option value="Istanbul">Istanbul</option>
          <option value="Edirne">Edirne</option>
          </optgroup>
          <optgroup label="Ege">
            <option value="İzmir">İzmir</option>
            <option value="Çanakkale">Çanakkale</option>
            </optgroup>
        </select>
      </div>
      <div>
        <label for="Hobbies">Hobbies</label>
        <input type="checkbox" name="Hobbies" value="Sports"> Sports
        <input type="checkbox"  name="Hobbies" value="Music"> Music
         <input type="checkbox"  name="Hobbies" value="Food"> Food
      </div>
      <div>
        <label for="cv">Özgeçmiş</label>
        <input type="file" id = "cv">
      </div>
     
     
    </fieldset>
    <fieldset>
      <legend>İletişim</legend>
      <label for="eposta">E-posta</label>
      <input type="email" id = "eposta">
      <div>
        <label for="tel">Telefon</label>
        <input type="tel" id = "tel">
      </div>

      <div>
        <label for="Address">Adres</label>
        <textarea id="Address" cols="30" rows="10"></textarea>
      </div>
      
    </fieldset>
    <fieldset>
      <legend>General Input Type</legend>
      <label for="password">Şifre</label>
      <input type="password" id="password"">
    <div>
      <button type="submit">Kaydet</button>
      <button type="reset">Reset</button>
    </div>
    </fieldset>
    
  </form>

  <h2>HTML Input Types</h2>

<h3>Input Type Color</h3>

  <input type="color">

<h3>Input Type Number</h3>

  <input type="number">
  <div><input type="range" value="30"></div>

<h3>Input Type Time</h3>

  <input type="time">

<h2>HTML Input Attributes</h2>

  <h3>The <code>value</code> Attributes</h3>
  <input type="text" value="Jhon">

  <h3>The <code>readonly</code> Attributes</h3>
  <input type="text" value="Doe" readonly>

  <h3>The <code>disabled</code> Attributes</h3>
  <input type="number" value="28" disabled> 
  <!--disabled da bir checkbox koyarak enable yapabiliriz aradaki fark burdan geliyor-->
  
  <h3>The <code>placeholder</code> Attributes</h3>
  <input type="tel" placeholder="500 123 43 43">

  
